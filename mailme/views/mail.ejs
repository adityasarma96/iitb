<!DOCTYPE html>
<html>
<head>
	<title>Inbox</title>
	<meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  	<link rel="stylesheet" type="text/css" href="./css/mail.css">
  	<script type="text/javascript" src="./js/mail.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <a class="navbar-brand" href="/mail">Mail Me</a>
    <div class="collapse navbar-collapse navbar-element">
          <ul class="navbar-nav ml-auto">
          	<li>
          		<form class="form-inline">
      				<input class="form-control mr-sm-2" type="text">
      				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    			</form>
          	</li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Account</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Sign Out</a>
            </li>
        </ul>
    </div>
</nav>
<div id="content">
	<div id="mailLinks">
		<br><br>
		<a href="/compose">
		<button type="button" id="button">Compose</button></a>
		<br><br><br><br>
		<a href="/inbox" class="btn btn-info" role="button">Inbox</a><br><br>
		<a href="/starred" class="btn btn-info" role="button">Starred</a><br><br>
		<a href="/important" class="btn btn-info" role="button">Important</a><br><br>
		<a href="/sent" class="btn btn-info" role="button">Sent Mail</a><br><br>
		<a href="/drafts" class="btn btn-info" role="button">Drafts</a><br><br>
	</div>
	<div id="mails">
		<table>
			<% for(var i=0; i < mailDetails.length; i++) { %>
			   <tr>
			     <td style="width: 100px;"><%= mailDetails[i].from %></td>
			     <td style="width: 200px;"><%= mailDetails[i].subject %></td>
			     <td style="width: 300px;"><%= mailDetails[i].message %></td>
			     <td style="width: 500px;"><%= mailDetails[i].time %></td>
			   </tr>
			<% } %>
		</table>
	</div>
</div>
</body>
</html>